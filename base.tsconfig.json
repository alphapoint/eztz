{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitUseStrict": false,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declarationDir": "./dist/",
    "outDir": "./dist/",
    "rootDir": "./src/",
    "lib": [
      "es6",
      "es7",
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
