{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitUseStrict": false,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "noEmitOnError": true,
    "declarationDir": "./dist/",
    "outDir": "./dist/",
    "rootDir": "./src/",
    "lib": [
      "es6",
      "es7",
      "esnext"
    ],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ",**/*.d.ts"
  ]
}
