{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "lib":["es6", "es7", "esnext"],
      "allowJs": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
  }
